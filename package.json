{
  "scripts": {
    "dev:css": "npx tailwindcss -i input.css -o static/css/output.css -w",
    "dev:hugo": "hugo server",
    "dev": "run-p dev:*",
    "build:css": "NODE_ENV=production npx tailwindcss -i input.css -o static/css/output.css",
    "build:hugo": "HUGO_ENV=production hugo",
    "build": "run-s build:*",
    "pretty": "prettier --write \"./**/*.{html,svg}\""
  },
  "devDependencies": {
    "npm-run-all": "^4.1.5",
    "prettier": "^2.6.2",
    "prettier-plugin-go-template": "^0.0.12",
    "prettier-plugin-tailwindcss": "^0.1.8",
    "tailwindcss": "^3.0.24"
  }
}
